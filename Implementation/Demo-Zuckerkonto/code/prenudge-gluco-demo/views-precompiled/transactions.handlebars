{{#unless latestMeasurements.length}}
    <div class="measurements-empty">
        Du hast noch keine Einzahlungen gemacht.<br/>
        Zahle noch heute auf dein Konto ein, um unglaubliche Prämien zu gewinnen.
    </div>
{{/unless}}

{{#if latestMeasurements.length}}
    <ol class="list-group">
        {{#each latestMeasurements}}
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                    {{#if this.syncedToPrenudge}}
                        <img class="measurement-icon" src="/images/prenudge_notext.png"
                             alt="Mit PreNudge synchronisiert"/>
                    {{else}}
                        <img class="measurement-icon filter-bw" src="/images/prenudge_notext.png"
                             alt="Nicht mit PreNudge synchronisiert"/>
                    {{/if}}
                </div>
                <div class="ms-2 me-auto" style="overflow: auto">
                    <div class="fw-bold mb-1">Einzahlung</div>
                    <div>
                        {{this.subinfo}}
                    </div>
                    {{#unless this.isusersubject}}
                        <div>
                            <b class="text-danger">Subject anders!</b>
                        </div>
                    {{/unless}}
                    {{#unless this.outcomeOk}}
                        <div>
                            <b class="text-danger">FHIR Fehler - {{this.status}} {{this.statusText}}</b><br/>
                            <pre>{{this.fhirOutcomeJson}}</pre>
                        </div>
                    {{/unless}}

                    {{this.formattedDate}}
                </div>
                <div class="text-center">
                    <div class="measurement-value badge
                    {{#if this.isInRange}}
                    text-bg-success
                    {{else}}
                    text-bg-warning
                    {{/if}}
                    rounded-pill">{{this.value}}
                        mg/dl
                        {{#if this.isLower}}
                            <i class="bi bi-arrow-down-circle ms-2" title="Unter dem Zielbereich!"></i>
                        {{/if}}
                        {{#if this.isUpper}}
                            <i class="bi bi-arrow-up-circle ms-2" title="Über dem Zielbereich!"></i>
                        {{/if}}
                    </div>
                    <div class="text-muted">{{this.targetBgLower}} bis {{this.targetBgUpper}} mg/dl</div>
                </div>
            </li>
        {{/each}}
    </ol>
{{/if}}